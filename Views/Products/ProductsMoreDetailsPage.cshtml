@{
    Layout = "~/Views/Shared/Productslayout.cshtml";
}
@model Showinformationproducts
<div class="container-fluid py-4">
    <div class="row">
        <div class="row col-lg-8 mb-5 pt-2 px-0">
            <div class="rounded col-12 ps-3 h-100" id="divImage">
                <img src="@($"data:image/*;base64,{Convert.ToBase64String(Model.images[0].Imagebyteviewmodel)}")" class="h-100 rounded img-fluid" alt="@Model.name" />
            </div>
            <div class="thumbnail-gallery pt-2 mx-2 pb-5">
                @{
                    foreach (var image in Model.images)
                    {
                        <img src="@($"data:image/*;base64,{Convert.ToBase64String(image.Imagebyteviewmodel)}")"
                             class="thumbnail @(image == Model.images[0] ? "active" : "")"
                             alt="@Model.name thumbnail"
                             onclick="updateMainImage(this)" />
                    }
                }
            </div>
        </div>
        <div class="col-12 mt-5 mt-lg-0 mt-xl-0 mt-xxl-0 col-lg-4 px-4 text-center">
            <div class="container-fluid p-0 h-100">
                <div class="row h-100">
                    <div class="col-12 align-self-start divtexts mb-0 mb-lg-5">
                        <h1 class="product-title" id="headercontent">@Model.name</h1>
                        <p class="product-description" style="word-wrap:break-word !important" id="contentp">@Model.description</p>
                    </div>
                    <div class="col-12">
                        <div class="row text-start">
                            <div class="col-12">
                                <p class="price-tag">Price: <span class="scocontent">$@Model.price</span></p>
                            </div>
                            <div class="col-12">
                                <p class="h4 mb-3">Available: <span class="selercontent">@Model.count</span></p>
                            </div>
                            <div class="col-12">
                                <p class="h4 mb-4">Category: <span class="badge bg-primary selercontent">@Model.tagname</span></p>
                            </div>
                        </div>
                    </div>
                    <div class="px-2 d-flex align-items-center justify-content-start">
                        <div class="quantity-container">
                            <button class="quantity-btn decrease btn" type="button">-</button>
                            <input type="number" id="quantity" class="quantity-input" value="1" min="0" readonly>
                            <button class="quantity-btn increase btn" type="button">+</button>
                        </div>
                    </div>
                    <div class="col-12 px-2 mt-3 d-flex align-items-center justify-content-center p-0">
                        <button id="btnaddtocard" class="btn btn-success w-100 btnaddcard">
                            <i class="bi bi-cart-plus me-2"></i>Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row row2items mt-5 p-3 text-center bg-white rounded">
            <div class="col-4">
                <i id="iblike" class="fa-regular fa-thumbs-up"></i>
            </div>
            <div class="col-4">
                <i id="ibshair" class="bi bi-share-fill"></i>
            </div>
            <div class="col-4">
                <i id="commenti" class="bi bi-chat-left-dots"></i>
            </div>
        </div>
        <div id="divpoinp" class="hiddeninput p-0 col-12 d-flex p-2 justify-content-center">
        </div>
    </div>
</div>
<script src="~/Javascript/Products.js"></script>