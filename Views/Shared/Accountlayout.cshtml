@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="Bingo Shop online store is one of the best stores where you can find anything you want such as bags, shoes, clothes, home appliances and electronics. and...">
    <meta name="keywords"
          content="Bingo Shop, Bingo, Shop, online store, online, store, bags, shoes, clothes, home appliances, electronics">
    <meta name="author" content="kushan kuhi">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="icon" href="~/Images/bingologo.jpg">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Lilita+One&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <title>BingoShop</title>
    <link rel="stylesheet" href="~/Styles/Home.css">
    <link href="~/styles/accountpanel.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Styles/Orderspanel.css" />
    <link href="~/styles/products.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
</head>

<body>
    <div class="container-fluid maindiv w-100 p-0">
        <div class="row-12">
            <div class="col-auto align-self-start">
                <nav class="navbar navbar-expand-lg" id="navbar">
                    <div class="container-fluid">
                        <div class="branddiv" id="branddiv">
                            <a class="navbar-brand" id="logoar" asp-action="Index" asp-controller="Home">
                                <b class="bingob " id="bingob">Bingo</b><b id="shopb" class="shopb">Shop</b>
                            </a>
                        </div>
                        <button id="navbarbtn" class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse p-2 rounded-bottom-3" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link accountdropdown" aria-current="page" asp-action="Index"
                                       asp-controller="Home">
                                        <i class="bi bi-house"></i>
                                        Home
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle accountdropdown" href="#" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-box-seam"></i>
                                        products
                                    </a>
                                    <ul class="dropdown-menu text-center">
                                        <li>
                                            <a class="dropdown-item" href="/Home/Index?#popitems">popular prodcuts</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-action="ProductsHomePage"
                                               asp-controller="Products">All prodcuts</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle accountdropdown" href="#" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        @{
                                            @inject UserManager<ApplicationUser> userManager;
                                            if (User.Identity.IsAuthenticated)
                                            {
                                                var user = await userManager.FindByIdAsync(User.FindFirstValue(ClaimTypes.NameIdentifier));
                                                <i style="color:#25d366 !important;" class="bi bi-person-circle"></i>
                                                @($"{user.Fullname}")
                                            }
                                            else
                                            {
                                                <i style="color:red !important;" class="bi bi-person-circle"></i>
                                                @("Guest")
                                            }
                                        }
                                    </a>
                                    <ul class="dropdown-menu text-center">
                                        @{
                                            if (!User.Identity.IsAuthenticated)
                                            {
                                                <li>
                                                    <a class="dropdown-item" asp-action="loginandregisterpage"
                                                       asp-controller="Account">Login or register</a>
                                                </li>
                                            }
                                            else if (User.Identity.IsAuthenticated && await userManager.IsInRoleAsync(await userManager.FindByIdAsync(User.FindFirstValue(ClaimTypes.NameIdentifier)), "Admin") == true)
                                            {
                                                <li>
                                                    <a class="dropdown-item" asp-action="AdminDashboard"
                                                       asp-controller="Admin">AdminPanel</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <a class="dropdown-item" id="UserPanel" asp-action="AccountPanel"
                                                       asp-controller="Account">UserPanel</a>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </li>
                            </ul>
                            @* TODO:vaghti be back residi ok she *@
                            <div class="text-center me-4 divshopingcard">
                                <div class="btn-group">
                                    <a class="btn btn-outline-secondary btnsecpa z-3 btn-sm" asp-controller="Account" asp-action="OrdersPanel" type="button">
                                        <i class="bi bi-cart2"></i>
                                        <span id="cardtotal" class="position-absolute z-3 top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            0
                                        </span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>

                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <form class="d-flex" role="search">
                                <input type="search" class="form-control  me-2" list="datalistOptions"
                                       placeholder="Search for product" aria-label="Search" aria-describedby="button-addon2">
                                <datalist id="datalistOptions">
                                    <option value="All Products"></option>
                                    <option value="Low to Hight price"></option>
                                    <option value="Hight to Low price"></option>
                                    <option value="Laptops"></option>
                                    <option value="Phones"></option>
                                    <option value="HeadPhones"></option>
                                </datalist>
                                <button class="btn-bd-primary" type="button" id="button-addon2">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>


            <div class="col-auto align-self-center maincontentdiv w-100">
                <div class="notifications col-12">
                </div>
                <div class="maincontant">
                    <div class="col-12">
                        <div class="col-12 p-0">
                            <div class="p-3">
                                <button class="btnnavbarleft z-3" id="btnconavle" type="button" data-bs-toggle="offcanvas" data-bs-target="#staticBackdrop" aria-controls="staticBackdrop">
                                    panel oprions
                                </button>
                            </div>
                            <div class="offcanvas offcanvas-start bg-dark" data-bs-backdrop="static" tabindex="-1" id="staticBackdrop" aria-labelledby="staticBackdropLabel">
                                <div class="offcanvas-header position-relative mb-3">
                                    <h5 class="offcanvas-title" id="staticBackdropLabel"><b class="bingob " id="bingob">Bingo</b><b id="shopb" class="shopb">Shop</b></h5>
                                    <button data-bs-dismiss="offcanvas" aria-label="Close" class="btnclosenav d-flex"><i class="bi bi-x-lg"></i></button>
                                </div>
                                <div class="offcanvas-body mt-4">
                                    <ul class="nav flex-column">
                                        <li class="nav-item">
                                            <a class="nav-link navlinkscolco py-3" asp-action="Accountpanel" asp-controller="Account" id="btnpnaelandload"><i class="bi bi-person-fill"></i>My Profile</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link navlinkscolco py-3" asp-action="OrdersPanel" asp-controller="Account"><i class="bi bi-cart-fill"></i>My Orders</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link navlinkscolco py-3" asp-action="BestProductsPage" asp-controller="Account"><i class="bi bi-box2-heart-fill"></i>My bestProducts</a>
                                        </li>
                                    </ul>
                                </div>
                                @*TODO:back*@
                                <div>
                                    <form asp-action="Signout" asp-controller="Account">
                                    <button type="submit" id="logoutbtn">logout<i class="bi text-danger bi-box-arrow-right"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </div>


            <div class="col-auto align-self-end w-100 divfooterlay">
                <footer class="footerborder">
                    <div class="row footer m-0 p-0">
                        <div class="col-auto col-sm-auto col-md-3 justify-content-center ">
                            <img class="p-3 rounded-circle" width="200" height="194" src="~/Images/logo2.jpg" />
                        </div>
                        <div class="col-auto col-sm-auto col-md-3 withcontent text-center border-bottom">
                            <h3>About us</h3>
                            <p>
                                We are the best store group in the electronics area, and you can trust us in this
                                regard, and we are trying to do the best in terms of pre- and post-sale services.
                            </p>
                        </div>
                        <div class="col-auto col-sm-auto col-md-3 withcontent text-center border-bottom">
                            <h3>Contact us</h3>
                            <p>Find us one social media</p>
                            <a href="#">
                                <i class="bi bi-whatsapp"></i>
                            </a>
                            <a href="#">
                                <i class="bi bi-telegram"></i>
                            </a>
                            <a href="#">
                                <i class="bi bi-youtube"></i>
                            </a>
                            <a href="#">
                                <i class="bi bi-facebook"></i>
                            </a>
                            <a href="#">
                                <i class="bi bi-instagram"></i>
                            </a>
                        </div>
                        <div class="col-auto col-sm-auto col-md-3 withcontent text-center border-bottom">
                            <h3>
                                Links
                            </h3>
                            <ul class="linksfooter ps-0">
                                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                                <li><a asp-action="ProductsHomePage" asp-controller="Products">products</a></li>
                                <li><a asp-action="BlogPage" asp-controller="Blog">blog</a></li>
                                <li><a asp-action="About" asp-controller="About">About</a></li>
                                <li><a href="">FAQ</a></li>
                            </ul>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/Javascript/Index.js"></script>
    <script src="~/javascript/accountpanel.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Javascript/Json.js"></script>
    <script src="~/javascript/orders.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>